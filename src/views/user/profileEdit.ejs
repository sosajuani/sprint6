<%- include("../partials/head",{title: "Editar perfil"})  %>
<%- include("../partials/menuHeader.ejs")  %>
<div class="contGeneral">
    <div class="profileEditCont">
        <img src="/img/logo_pequeño.png" alt="foto de perfil">
        <div>
            <h3>Informacion</h3>
            <form action="/perfil/<%= user.id %>/edit/info?_method=PUT" method="post" class="formProfileEdit">
                <label for="first_name">
                    Nombre
                    <input placeholder="Colocar nombre" value="<%= user.first_name %>" type="text" name="first_name" id="first_name">
                </label>
                <label for="last_name">
                    Apellido
                    <input placeholder="Colocar apellido" value="<%= user.last_name %>" type="text" name="last_name" id="last_name">
                </label>
                <label for="email">
                    Email
                    <input placeholder="Colocar email" value="<%= user.email %>" type="text" name="email" id="email">
                </label>
                <label for="pass">
                    Contraseña
                    <input placeholder="Colocar contraseña" type="password" name="pass" id="pass" required>
                    <input placeholder="Repetir contraseña" type="password" name="pass2" id="pass" required>
                </label>
                <label for="pass">
                    Avatar
                    <input type="file" name="avatar">
                </label>
                <input type="submit" value="Actualizar información">
            </form>
        </div>
    </div>
</div>
<%- include("../partials/footerBase.ejs")  %>
